<%= form_with model:article do |f| %>
  <div class="form-group padding-top-15">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group"> 
    <%= f.label :body, 'コンテンツ' %>
    <%= f.text_area :body, rows: 10, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
